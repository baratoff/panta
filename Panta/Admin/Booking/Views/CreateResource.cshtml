@model Panta.Admin.Booking.ViewModels.ResourceViewModel


@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">Create Resource</div>

        <div class="form-group">
            <div class="input-group col-sm-offset-2">
                <span class="input-group-addon">Name</span>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
            </div>
        </div>

        <div class="form-group">
            <div class="input-group col-sm-offset-2">
                <span class="input-group-addon">Desctiption</span>
                @Html.EditorFor(model => model.Desctiption, new { htmlAttributes = new { @class = "form-control", @placeholder = "Desctiption" } })
            </div>
        </div>
        <div class="col-md-offset-9">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</div>
}
